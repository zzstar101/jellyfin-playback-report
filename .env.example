# =========================
# Jellyfin Playback Report V3
# Copy this file to .env and fill in your values.
# =========================

# NAS SSH (optional, only for remote DB sync)
NAS_HOST=
NAS_PORT=22
NAS_USER=
NAS_PASSWORD=
NAS_DB_PATH=

# Local database/cache
DB_CACHE_DIR=./cache
DB_PATH=./cache/playback_reporting.db

# Jellyfin
JELLYFIN_URL=https://your-jellyfin-server.com
JELLYFIN_API_KEY=

# MoviePilot (optional, for subscribe calendar)
MOVIEPILOT_URL=https://your-moviepilot-server.com
MOVIEPILOT_API_TOKEN=
MOVIEPILOT_USERNAME=
MOVIEPILOT_PASSWORD=

# ServerChan (optional)
SERVERCHAN_KEY=

# Lsky (optional)
LSKY_URL=https://your-lsky-server.com
LSKY_TOKEN=

# Site display name
SITE_NAME=YOUR_SITE_NAME

# Ranking config
TOP_N=3
LIBRARY_ANIME=
LIBRARY_TV=

# Output
POSTER_DIR=./posters

# Fonts
FONT_PATH=/usr/share/fonts/truetype/wqy/wqy-microhei.ttc
FONT_BOLD_PATH=/usr/share/fonts/truetype/wqy/wqy-microhei.ttc

# Push switch
ENABLE_PUSH=true
